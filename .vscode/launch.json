{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug train.cpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/train",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Adjust for your system
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
